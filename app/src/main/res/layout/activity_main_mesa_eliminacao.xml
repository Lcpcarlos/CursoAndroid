<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acitivity_mesa_eliminacao"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Posição"
        app:layout_constraintBottom_toTopOf="@id/activity_mesa_eliminacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/activity_titulo_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@id/activity_mesa_eliminacao"
        app:layout_constraintStart_toEndOf="@id/activity_titulo"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/activity_mesa_eliminacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_titulo"
        tools:listitem="@layout/layout_item_mesaeliminacao">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>